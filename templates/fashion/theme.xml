<?xml version="1.0" encoding="utf-8"?>
<theme scriptType="shop" scriptMajorVersion="2" themeType="pc">
    <general>
        <author>ReadyScript lab.</author>
        <name>Молодежная</name>
        <description>Адаптивная тема, созданная без использования сетки в четырех цветовых вариациях</description>
        <version>3.0.107</version>
    </general>
    <shades>
        <shade>
            <id>orange</id>
            <title>Оранжевый</title>
            <color>#FEC447</color>
        </shade>
        <shade>
            <id>green</id>
            <title>Зеленый</title>
            <color>#C9D823</color>
        </shade>
        <shade>
            <id>violet</id>
            <title>Фиолетовый</title>
            <color>#5C5799</color>
        </shade>
        <shade>
            <id>purple</id>
            <title>Бардовый</title>
            <color>#A63813</color>
        </shade>        
    </shades>
    <options>
        <group name="Основные">
            <option name="enable_one_click_cart" type="checkbox">
                <description>Включить заказ в 1 клик в корзине</description>
                <default>1</default>
            </option>
            <option name="enable_favorite" type="checkbox">
                <description>Включить добавление товаров в избранное</description>
                <default>1</default>
            </option>
            <option name="enable_compare" type="checkbox">
                <description>Включить сравнение товаров</description>
                <default>1</default>
            </option>
            <option name="cat_description_bottom" type="checkbox">
                <description>Переместить описание категории вниз страницы</description>
                <default>0</default>
            </option>
        </group>
    </options>    
</theme>